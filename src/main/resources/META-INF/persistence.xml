<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
   <persistence-unit name="world" transaction-type="JTA">
      <jta-data-source>java:/world</jta-data-source>
       <class>world.domain.Continent</class>
       <class>world.domain.City</class>
       <class>world.domain.Country</class>
       <class>world.domain.Language</class>
       <properties>
        	<property name="hibernate.hbm2ddl.auto" value="update" />
      </properties>
   </persistence-unit>
</persistence>
